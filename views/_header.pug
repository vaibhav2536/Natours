header.header
  nav.nav.nav--tours
    a.nav__el(href='/') All tours
    a.nav__el(href='#' onclick='showChatbot()') Chatbot
  .header__logo
    a(href='/')
      img(src='/img/logo-white.png' alt='Natours logo')
  nav.nav.nav--user
    if user
      a.nav__el.nav__el--logout Log out
      a.nav__el(href='/me')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`${user.name}`)
        span= user.name.split(' ')[0]
    else
      a.nav__el(href='/login') Log in
      a.nav__el.nav__el--cta(href='/signup') Sign up

// Add the iframe below the header (this displays the chatbot content when toggled)
main.main-content
  iframe#chatbot-iframe(src='https://aitravelapp.vercel.app/chat-bot' style='display: none; width: 100%; height: 600px; border: none;')

// Add JavaScript to control the iframe visibility
script.
  function showChatbot() {
    const iframe = document.getElementById('chatbot-iframe');
    iframe.style.display = (iframe.style.display === 'none') ? 'block' : 'none';
  }
